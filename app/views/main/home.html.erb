  <script>
    (() => {
      const modalKeys = ["privacy", "cookies"];
      const modals = {
        privacy: document.querySelector('[data-legal-modal="privacy"]'),
        cookies: document.querySelector('[data-legal-modal="cookies"]'),
      };
      const openButtons = document.querySelectorAll("[data-legal-open]");
      const closeButtons = document.querySelectorAll("[data-legal-close]");
      let activeModal = null;

      const hideAll = () => {
        Object.values(modals).forEach((modal) => {
          if (!modal) return;
          modal.hidden = true;
          modal.setAttribute("aria-hidden", "true");
        });
        document.body.style.overflow = "";
        activeModal = null;
      };

      const showModal = (key, updateHash = true) => {
        const modal = modals[key];
        if (!modal) return;
        if (activeModal === key) return;
        hideAll();
        modal.hidden = false;
        modal.setAttribute("aria-hidden", "false");
        document.body.style.overflow = "hidden";
        activeModal = key;
        if (updateHash) {
          history.replaceState(null, "", `#${key}`);
        }
      };

      const closeModal = (updateHash = true) => {
        if (!activeModal) return;
        hideAll();
        if (updateHash) {
          history.replaceState(null, "", window.location.pathname + window.location.search);
        }
      };

      const syncFromHash = () => {
        const key = window.location.hash.replace("#", "");
        if (modalKeys.includes(key)) {
          showModal(key, false);
        } else {
          hideAll();
        }
      };

      openButtons.forEach((button) => {
        button.addEventListener("click", (event) => {
          event.preventDefault();
          showModal(button.dataset.legalOpen);
        });
      });

      closeButtons.forEach((button) => {
        button.addEventListener("click", (event) => {
          event.preventDefault();
          closeModal();
        });
      });

      document.addEventListener("keydown", (event) => {
        if (event.key === "Escape") closeModal();
      });

      window.addEventListener("hashchange", syncFromHash);
      syncFromHash();
    })();
  </script>

